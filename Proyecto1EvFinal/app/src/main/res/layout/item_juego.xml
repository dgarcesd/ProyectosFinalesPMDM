<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!-- 2 Nos creamos el item xml -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green">


        <ImageView
            android:id="@+id/imagenJuego"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"

            />

        <TextView
            android:id="@+id/nombreJuego"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="POKEDEX"
            android:textAllCaps="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="140dp"
            android:layout_marginRight="10dp"/>


        <TextView
            android:id="@+id/nombreDesarrollador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="POKEDEX"
            android:hint="n"
            android:textAllCaps="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="140dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/nombreJuego"/>

        <TextView
            android:id="@+id/anyoJuego"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="POKEDEX"
            android:hint="n"
            android:textAllCaps="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="140dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/nombreDesarrollador"/>

        <RatingBar
            android:id="@+id/valoracionJuego"
            style="@style/Widget.AppCompat.RatingBar.Indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="180dp"
            android:rating="5"
            android:stepSize="1"
            android:layout_below="@id/anyoJuego"

             />

    </RelativeLayout>



</LinearLayout>